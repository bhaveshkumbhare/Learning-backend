<body>
    <div class="main w-full min-h-screen bg-zinc-900 p-10 text-white">
        <a class="text-blue-600 inline-block mb-5" href="/">Go Back to Home </a>
        <form action="/edit" method="post">
                <input class="block w-1/4 rounded-md  ouutline-none mt-2 px-5 py-2 bg-zinc-800" type="text" name="previous" placeholder="Previous Name" value="<%= filename %>" readonly>
                <input class="block w-1/4 mt-2 px-5 py-2 rounded-md  ouutline-none resize-none bg-zinc-800" name="new" placeholder="New Name">
                <button type="submit"  class="mt-2 bg-yellow-500 p-2 rounded-lg" value="Update Name">Update Name</button>
            </form>
    </div>
</body>
